@import "../../style/constants";

.dc-checkbox-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  padding: 10px 20px;
  background-color: transparent;
  cursor: pointer;
  transition: background-color $transition-time-s ease;

  &:hover {
    background-color: white;
  }
    
  & + .dc-checkbox-wrapper:before {
    position: absolute;
    top: 0;
    display: block;
    margin: 0 -10px;
    width: calc(100% - 20px);
    height: 0;
    border-top: 1px solid $dc-color-gs-5;
    content: "";
  }
}
  
.dc-checkbox {
  margin-right: 10px;
  padding: 1px;
  min-width: 27px;
  width: @min-width;
  height: @min-width;
  border: 1px solid $dc-color-gs-3;
  border-radius: 3px;
  background-color: white;

  .dc-icon {
    width: 24px;
    height: @height;
    fill: $dc-color-positive !important;
  }
    
  .dc-checkbox-message-positive & {
    border-color: transparent;
    background-color: transparent;
  }
}

.dc-checkbox-small {
  min-width: 22px;
  width: @min-width;
  height: @min-width;

  .dc-icon {
    width: 19px;
    height: @height;
  }
}

.dc-checkbox-checked {
  border-color: $dc-color-positive;
}

.dc-checkbox-disabled {
  background-color: $dc-color-gs-6;
  color: $dc-color-gs-3;

  .dc-checkbox {
    border-color: $dc-color-gs-5;
    background-color: $dc-color-gs-7;
    opacity: 0.7;
  }
}

.dc-checkbox-label {
  flex: 1;
}

.dc-checkbox-message-positive,
.dc-checkbox-message-positive:hover {
  background-color: $dc-color-positive-hover;
  color: $dc-color-gs-2;
}
  
.dc-checkbox-message-negative,
.dc-checkbox-message-negative:hover {
  background-color: $tooltip-negative-2;
  color: $dc-color-gs-2;
}

.dc-checkbox-message-center {
  display: block;
  padding-top: 16px;
  padding-bottom: 15px;
  text-align: center;

  .dc-checkbox {
    display: none;
  }
}
