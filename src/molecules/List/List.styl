@import "../../style/constants";

.dc-list {
  margin: 0;
  padding: 0;
  font-size: 13px;

  li.dc-list__item {
    display: flex;
    align-items: flex-start;
    margin: 0 0 10px;
    padding-left: 0;
    list-style: none;

    &:last-child {
      margin: 0;
    }

    span:nth-of-type(2) {
      display: block;
      padding: 0;
      max-width: 100%;
    }
  }

  .dc-icon {
    margin: -3px 2px 4px -3px;
    width: 20px;
  }

}
