@import "../../style/constants";

.dc-radio-group {
  .dc-form-item + & {
    margin-top: -5px;
  }
}
  
.dc-radio {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;

  input[type="radio"] {
    opacity: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .dc-icon {
    margin-right: 10px;
  }
}

.dc-radio-label {
  display: flex;
  align-items: center;
  margin: 5px 0;
  padding: 0;
  width: 100%;
  cursor: pointer;
}

.dc-radio-bullet {
  position: relative;
  flex-shrink: 0;
  box-sizing: border-box;
  margin-right: 11px;
  width: 22px;
  height: 22px;
  border: 1px solid $dc-color-gs-3;
  border-radius: 50%;

  &:before {
    position: absolute;
    top: 3px;
    left: 3px;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    content: "";
    transform: scale(0);
    transition: transform 0.1s;
  }
}

.dc-radio-checked {
  border-color: $dc-color-positive;

  &:before {
    background: $dc-color-positive;
    transform: scale(1);
  }
}

.dc-radio-disabled {
  border-color: $dc-color-gs-5;

  &:before {
    background: $dc-color-gs-5;
  }
}

.dc-radio-button {
  display: inline-block;
  overflow: visible;
  padding: 8px $spacing-s;
  max-width: 320px;
  width: 100%;
  height: auto;
  outline: 0;
  border: 1px solid $dc-color-gs-5;
  border-radius: 4px;
  background-color: $dc-color-gs-7;
  color: $currys-color;
  vertical-align: middle;
  text-align: left;
  line-height: 1;
  cursor: pointer;

  user-select: none;
}

.dc-radio-button-checked {
  background-color: $dc-color-message-hover;
}
