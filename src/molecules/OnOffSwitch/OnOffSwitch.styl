@import "../../style/constants";

.dc-on-off-switch-wrapper {
  display: inline-flex;
  align-items: center;
  cursor: pointer;
}

.dc-on-off-switch {
  position: relative;
  display: inline-block;
  margin-right: 10px;
  padding: 2px 10px 2px 22px;
  height: 30px;
  border-radius: 20px;
  background-color: $color-primary-d-9;
  cursor: pointer;
  transition: background-color $transition-time-s ease;
  user-select: none;

  &.dc-on-off-switch-active {
    padding-right: 25px;
    padding-left: 7px;

    &:before {
      left: calc(100% - 28px);
    }
  }

  &:before {
    position: absolute;
    top: 2px;
    left: 2px;
    width: 24px;
    height: 24px;
    border: 1px solid $dc-color-gs-4;
    border-radius: 50%;
    background-color: $dc-color-gs-7;
    content: "";
    transition: left $transition-time-s ease;
  }

  @media $mobile {
    align-self: flex-start;
  }
}

.dc-on-off-switch-label {
  display: inline-block;
  min-width: 26px;
  color: $dc-color-gs-2;
  text-align: right;
  font-size: $font-size-xxs;
  line-height: 26px;

  .dc-on-off-switch-active & {
    color: $dc-color-gs-7;
    text-align: left;
  }
}

.ie10 .dc-on-off-switch-description {
  display: inline-block;
  flex: 1 1;
}
