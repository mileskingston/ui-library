@import "../../../style/constants";

[data-component='SlidingContent'],
[data-sticky-header="true"] [data-component="Header"] {
  transition: transform ease-in-out .3s;
}

[data-component='SlidingContent'] {
  position: relative;
  z-index: $z-index-medium;
  min-height: 100vh;
  padding-top: 1px;
  margin-top: -1px;
  left: 0;
  background: $dc-color-gs-7;
}

[data-route='basket'] [data-component='SlidingContent'] {
  padding-bottom: 60px; /* for sticky footer on basket page */
}

[data-component='SlidingContent'] > [data-element='Overlay'] {
  position: absolute;
  z-index: $z-index-overlay;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  opacity: 0;
  background: rgba(0, 0, 0, .5);
  transition: opacity .3s ease-in-out;
}

.slide-wrapper-hidden-fixed-content [data-component='SlideWrapper'] {
  [data-component='SlidingContent'] > [data-element='Overlay'] {
    visibility: hidden;
  }
}

.slide-wrapper-open [data-component='SlideWrapper'] {
  [data-component='SlidingContent'] {
    transform: translateX(255px);
    box-shadow: -1px 0 1em rgba(0, 0, 0, 0.3);
    & > [data-element='Overlay'] {
      opacity: 1;
      visibility: visible;
    }
  }
}
