@import "../../style/constants";

.dc-filter {
  display: inline-block;
  vertical-align: top;
  position: relative;
  width: 350px;

  .dc-input-invalid.dc-input-focused {
    border-color: $dc-color-price;
  }
    
  &.dc-filter-empty-results .dc-input-valid {
    border-color: $dc-color-dirty-yellow;
  }

  .dc-filter-info {
    margin-top: 5px !important; // Because fo-site-ui
    margin-bottom: 5px;
    text-align: right;
    font-size: $font-size-xs;

    @media $mobile {
      text-align: left;
    }
  }

  // Remove default cross in IE
  .dc-input::-ms-clear {
    display: none;
  }

  @media $tablet {
    width: 55%;
  }
  
  @media $mobile {
    float: none;
    margin: 12px 0 10px;
    width: 100%;
  }
}

.dc-filter-clear {
  position: absolute;
  top: 12px;
  right: 5px;
  z-index: 2;
  cursor: pointer;

  .dc-icon {
    width: 20px;
    height: 20px;
    fill: $dc-color-gs-4;
    stroke: $dc-color-gs-4;
  }
}

.dc-filter-spinner {
  position: absolute;
  top: 9px;
  right: 30px;
  z-index: 2;

  .dc-icon {
    width: 24px;
    height: 24px;
    font-size: 24px;

    color: $dc-color-gs-4;
    stroke: $dc-color-gs-4;
  }
}
