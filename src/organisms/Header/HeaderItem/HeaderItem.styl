@import "../../../atoms/typography/mixins.styl";

.dc-header-item {
  position: relative;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  color: $dc-color-gs-1;
  cursor: pointer;

  .dc-icon {
    margin-bottom: $spacing-1;
    height: 20px;
    fill: currentColor;
    stroke: transparent;

    svg {
      height: @height;
    }
  }

  &__badge {
    dc-text-body();
    position: absolute;
    top: -4px;
    right: 63%;
    padding: 0 3px;
    height: 17px;
    border-radius: 8px;
    color: $dc-color-gs-7;
    vertical-align: middle;
    text-align: center;
    line-height: 17px;

    @media $mobile {
      right: 68%;
    }

    @media $tablet {
      right: 96%;
    }

    &--circle {
      padding: 0;
      width: 17px;
      border-radius: 50%;
    }
  }

}
