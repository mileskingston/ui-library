@import "../../style/constants";

// Fix z-index mess on fo-site-ui when popup is opened
body.dc-overflow-hidden {
  
  #content {
    z-index: auto;
    transform: none;
  }
    
  @media $tablet {

    #product-actions-toggle {
      display: none;
    }
  }
}

@keyframes show-popup {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.dc-popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1020;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow-y: auto;
  padding: 10px;
  width: 100%;
  height: 100%;
  animation: show-popup $transition-time-s ease;
}

.dc-popup-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1010;
  width: 100%;
  height: 100%;
  background-color: rgba(34, 34, 34, 0.6);
  animation: show-popup $transition-time-s ease;
}

.dc-popup {
  max-width: 600px;
  box-shadow: 1px 2px 4px 0 rgba(34, 34, 34, 0.3);

  .dc-button {
    display: block;

    @media $mobile {
      width: 100%;
    }
  }

  @media $tablet {
    max-width: 500px;
  }

  @media $mobile {
    max-width: 350px;
    width: 100%;
  }
}

.dc-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 8px 10px 10px;
  border-radius: 4px 4px 0 0;
  color: $dc-color-gs-7;
  font-weight: 700;
  font-size: $font-size-s;

  .dc-icon {
    width: 24px;
    height: @width;
    fill: $dc-color-gs-7;
  }
}

.dc-popup-content {
  border-radius: 0 0 4px 4px;
  background-color: $dc-color-gs-7;
}
