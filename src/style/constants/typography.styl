@import "font";

$font-weight-normal =  400;
$font-weight-semibold =  600;
$font-weight-bold =  700;

$font-size-xxxs = $base-font-size * 0.6875;
$font-size-xxs = $base-font-size * 0.75;
$font-size-xs = $base-font-size * 0.8125;
$font-size-s = $base-font-size * 0.875;
$font-size-m = $base-font-size;
$font-size-l = $base-font-size * 1.25;
$font-size-xl = $base-font-size * 1.5;
$font-size-xxl = $base-font-size * 2;
$font-size-xxxl = $base-font-size * 4;
$line-height-base = $base-line-height-ratio;
$line-height-heading = $heading-line-height-ratio;
